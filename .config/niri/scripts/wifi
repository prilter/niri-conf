# CONNECTING
ssid=$(nmcli -f SSID dev wifi list | sed -n '1!p' | wofi -p "Choose WiFi: " --dmenu | tr -d ' ')
is_success=$(nmcli device wifi connect "SSID" --ask | wofi -p "Enter password:" --dmenu --password)

# SEND NOTIFY
if (($is_success == 0)); then
    notify-send "WiFi connection successful" -t 2500
else
    notify-send "WiFi connection failed" -t 2500
fi
